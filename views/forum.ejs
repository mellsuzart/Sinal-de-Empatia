  .coment:hover{
    min-height: 120px;
    width: 100%;
    margin: 0.5%;
    margin-bottom: -2.5%;
    padding: 2% 3% 2% 3%;
    box-shadow: 0 0 5px #458BE2;
    color: #458be2;
    cursor: pointer;
  }

  .cor{
    width: 100%;

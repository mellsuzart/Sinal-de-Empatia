            }

            .input-field .underline::before {
                content: '';
                position: absolute;
                height: 1px;
                width: 50%;
                bottom: -5px;
								left: 25%;
                background: rgba(0, 0, 0, 0.2);
            }

            .input-field .underline::after {
                content: '';
                position: absolute;
                height: 1px;
                width: 50%;
                bottom: -5px;

                background: linear-gradient(45deg, #458BE2, #58d0ff);
                transform: scaleX(0);
                transition: all .3s ease-in-out;
                transform-origin: left;
            }

            .input-field input:focus ~ .underline::after {
                transform: scaleX(1);
            }

            .input-field input {
                outline: none;
                font-size: 0.9rem;
                color: rgba(0, 0, 0, 0.7);
                width: 30%;
								text-align: center;

